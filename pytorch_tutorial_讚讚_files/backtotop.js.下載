$(function(){
    $("#topBackupArea").click(function(){
        jQuery("html,body").animate({
            scrollTop:0
        },500); /*敺�銝𦠜㬢��閧��笔漲0�糓��敹�,�彍摮𡑒�𠰴之�㬢��閖�笔漲頞𦠜��*/
    });
    $(window).scroll(function() {
        if ( $(this).scrollTop() > 300){ /*�𤌍��滨�雿滨蔭頝嗪𣪧蝬脤���蝡舀�匧�𡁻�𩤃�諹𥅾憭扳䲰300px撠望�撠�＊蝷箏枂靘�嚗��𤩺䲰撠望��黸��譌��*/
            $('#topBackupArea').fadeIn("fast");
        } else {
            $('#topBackupArea').stop().fadeOut("fast");
        }
    });
});